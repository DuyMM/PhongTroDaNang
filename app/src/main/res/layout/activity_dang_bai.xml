<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dang_bai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.maimanhduy.phongtrodanang.DangBai">

    <EditText
        android:id="@+id/edtTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Tiêu Đề"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/edtThongTinChung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtTieuDe"
        android:ems="10"
        android:hint="Thông Tin Chung"
        android:inputType="text|textMultiLine"
        android:lines="4"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:typeface="monospace" />


    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutGia"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Địa Chỉ"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:typeface="monospace" />

    <LinearLayout
        android:id="@+id/layoutGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtThongTinChung"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtGia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Giá"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:paddingTop="8dp"
            android:text="VND"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/edtDienTich"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Diện Tích"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:paddingTop="8dp"
            android:text="m2"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="20sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtDiaChi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ẢNH"
            android:textColor="@color/colorButton"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSO1"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:scaleType="center"
                app:srcCompat="@android:drawable/ic_menu_camera" />

        </LinearLayout>

        <Button
            android:id="@+id/btDangBai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutstyle"
            android:text="ĐĂNG BÀI"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:typeface="monospace" />
    </LinearLayout>

</RelativeLayout>
