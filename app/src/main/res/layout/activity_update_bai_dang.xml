<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_bai_dang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maimanhduy.phongtrodanang.UpdateBaiDang">

    <EditText
        android:id="@+id/edtUpdateTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Tiêu Đề"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/edtUpdateThongTinChung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtUpdateTieuDe"
        android:ems="10"
        android:gravity="start"
        android:hint="Thông Tin Chung"
        android:inputType="text|textMultiLine"
        android:lines="4"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:typeface="monospace" />


    <EditText
        android:id="@+id/edtUpdateDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutUpdateGia"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Địa Chỉ"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:typeface="monospace" />

    <LinearLayout
        android:id="@+id/layoutUpdateGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtUpdateThongTinChung"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtUpdateGia"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Giá"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:paddingTop="8dp"
            android:text="VND"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/edtUpdateDienTich"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Diện Tích"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView123"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:paddingTop="8dp"
            android:text="m2"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="20sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtUpdateDiaChi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ẢNH"
            android:textColor="@color/colorButton"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUpdate"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:scaleType="center" />

        </LinearLayout>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nutstyle"
            android:text="Cập Nhật"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:typeface="monospace" />
    </LinearLayout>
</RelativeLayout>
